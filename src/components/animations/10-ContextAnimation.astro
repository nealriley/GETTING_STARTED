---
/**
 * ContextAnimation.astro
 * 
 * Section 10: "Context Is King"
 * 
 * The vending machine metaphor:
 * - Random buttons ‚Üí wrong outputs
 * - Four context types: Domain, Procedural, Constraint, Preference
 * - Right buttons ‚Üí perfect output
 * 
 * Key insight: Curated context beats comprehensive context.
 */

interface Props {
  class?: string;
}

const { class: className = '' } = Astro.props;
---

<div class:list={['context-animation', className]} data-context-animation>
  <!-- Vending Machine -->
  <div class="vending-machine" data-element="machine">
    <div class="machine-header">
      <span class="machine-title">AI Output Machine</span>
    </div>
    
    <div class="machine-display">
      <!-- Wrong outputs (random pressing) -->
      <div class="wrong-outputs" data-element="wrong">
        <div class="output-item wrong" data-wrong="1">
          <span class="output-icon">üìù</span>
          <span class="output-text">Generic blog post</span>
        </div>
        <div class="output-item wrong" data-wrong="2">
          <span class="output-icon">üìã</span>
          <span class="output-text">Wrong format</span>
        </div>
        <div class="output-item wrong" data-wrong="3">
          <span class="output-icon">‚ùì</span>
          <span class="output-text">10 clarifying questions</span>
        </div>
      </div>
      
      <!-- Right output -->
      <div class="right-output" data-element="right">
        <div class="output-item right">
          <span class="output-icon">‚ú®</span>
          <span class="output-text">Perfect Q3 Report</span>
        </div>
      </div>
    </div>
  </div>

  <!-- Context Types Panel -->
  <div class="context-panel" data-element="panel">
    <div class="panel-header">
      <span class="panel-title">Context Types</span>
    </div>
    
    <div class="context-buttons">
      <button class="context-btn" data-ctx="domain">
        <span class="btn-label">Domain</span>
        <span class="btn-desc">Specialized knowledge</span>
        <span class="btn-status">‚óã</span>
      </button>
      
      <button class="context-btn" data-ctx="procedural">
        <span class="btn-label">Procedural</span>
        <span class="btn-desc">How it should be done</span>
        <span class="btn-status">‚óã</span>
      </button>
      
      <button class="context-btn" data-ctx="constraint">
        <span class="btn-label">Constraint</span>
        <span class="btn-desc">Boundaries & limits</span>
        <span class="btn-status">‚óã</span>
      </button>
      
      <button class="context-btn" data-ctx="preference">
        <span class="btn-label">Preference</span>
        <span class="btn-desc">Tone & style</span>
        <span class="btn-status">‚óã</span>
      </button>
    </div>
  </div>

  <!-- Insight -->
  <div class="insight-box" data-element="insight">
    <div class="insight-main">Curated context beats comprehensive context.</div>
    <div class="insight-sub">Three relevant paragraphs &gt; thirty pages of "might be useful"</div>
  </div>
</div>

<style>
  .context-animation {
    height: 100%;
    padding: 1rem;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    font-family: 'JetBrains Mono', monospace;
  }

  /* Vending Machine */
  .vending-machine {
    background: linear-gradient(180deg, #1a1a2e 0%, #0f0f1a 100%);
    border: 2px solid rgba(255, 255, 255, 0.1);
    border-radius: 12px;
    overflow: hidden;
    opacity: 0;
    transform: scale(0.95);
  }

  .machine-header {
    padding: 0.5rem 0.75rem;
    background: rgba(255, 255, 255, 0.05);
    border-bottom: 1px solid rgba(255, 255, 255, 0.08);
  }

  .machine-title {
    font-size: 0.7rem;
    color: rgba(255, 255, 255, 0.6);
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  .machine-display {
    padding: 0.75rem;
    min-height: 100px;
    position: relative;
  }

  /* Wrong Outputs */
  .wrong-outputs {
    display: flex;
    flex-direction: column;
    gap: 0.4rem;
  }

  .output-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.4rem 0.6rem;
    border-radius: 6px;
    font-size: 0.7rem;
    opacity: 0;
    transform: translateY(-10px);
  }

  .output-item.wrong {
    background: rgba(239, 68, 68, 0.1);
    border: 1px solid rgba(239, 68, 68, 0.2);
    color: rgba(239, 68, 68, 0.9);
  }

  .output-item.right {
    background: rgba(16, 185, 129, 0.1);
    border: 1px solid rgba(16, 185, 129, 0.3);
    color: #10b981;
  }

  .output-icon {
    font-size: 0.9rem;
  }

  .right-output {
    position: absolute;
    inset: 0.75rem;
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
  }

  .right-output .output-item {
    opacity: 1;
    transform: none;
    padding: 0.6rem 1rem;
    font-size: 0.85rem;
  }

  /* Context Panel */
  .context-panel {
    flex: 1;
    display: flex;
    flex-direction: column;
    background: rgba(139, 92, 246, 0.05);
    border: 1px solid rgba(139, 92, 246, 0.15);
    border-radius: 10px;
    overflow: hidden;
    opacity: 0;
  }

  .panel-header {
    padding: 0.5rem 0.75rem;
    background: rgba(139, 92, 246, 0.1);
    border-bottom: 1px solid rgba(139, 92, 246, 0.15);
  }

  .panel-title {
    font-size: 0.75rem;
    color: rgba(139, 92, 246, 0.9);
    font-weight: 600;
  }

  .context-buttons {
    flex: 1;
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 0.5rem;
    padding: 0.75rem;
  }

  .context-btn {
    display: flex;
    flex-direction: column;
    gap: 0.15rem;
    padding: 0.5rem 0.6rem;
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 8px;
    text-align: left;
    cursor: default;
    transition: all 0.3s ease;
    position: relative;
    opacity: 0;
    transform: translateY(10px);
  }

  .context-btn.active {
    background: rgba(16, 185, 129, 0.1);
    border-color: rgba(16, 185, 129, 0.4);
  }

  .btn-label {
    font-size: 0.75rem;
    font-weight: 600;
    color: rgba(255, 255, 255, 0.9);
  }

  .btn-desc {
    font-size: 0.6rem;
    color: rgba(255, 255, 255, 0.45);
  }

  .btn-status {
    position: absolute;
    top: 0.4rem;
    right: 0.5rem;
    font-size: 0.8rem;
    color: rgba(255, 255, 255, 0.2);
    transition: all 0.3s ease;
  }

  .context-btn.active .btn-status {
    color: #10b981;
  }

  .context-btn.active .btn-status::after {
    content: '‚óè';
  }

  /* Insight */
  .insight-box {
    text-align: center;
    padding: 0.6rem 1rem;
    background: linear-gradient(135deg, rgba(16, 185, 129, 0.1), rgba(59, 130, 246, 0.1));
    border: 1px solid rgba(16, 185, 129, 0.25);
    border-radius: 8px;
    opacity: 0;
    transform: translateY(10px);
  }

  .insight-main {
    font-size: 0.85rem;
    color: #10b981;
    font-weight: 600;
    font-family: 'Lora', serif;
    margin-bottom: 0.2rem;
  }

  .insight-sub {
    font-size: 0.7rem;
    color: rgba(255, 255, 255, 0.6);
  }

  /* Responsive */
  @media (max-width: 1200px) {
    .context-buttons {
      grid-template-columns: 1fr;
    }
  }
</style>

<script>
  import gsap from 'gsap';

  class ContextAnimationController {
    private container: HTMLElement;
    private timeline: gsap.core.Timeline | null = null;
    private isPlaying = false;

    constructor(container: HTMLElement) {
      this.container = container;
      this.init();
    }

    private init() {
      // Listen for animation start trigger (from chat content completion)
      document.addEventListener('animation:start', (e: Event) => {
        const detail = (e as CustomEvent).detail;
        if (detail.sectionId === 'context') {
          this.play();
        }
      });

      // Reset when section changes away
      document.addEventListener('section:change', (e: Event) => {
        const detail = (e as CustomEvent).detail;
        if (detail.sectionData?.id !== 'context') {
          this.reset();
        }
      });
    }

    play() {
      if (this.isPlaying) return;

      if (this.timeline) {
        this.timeline.kill();
        this.timeline = null;
      }

      this.resetElements();
      this.isPlaying = true;

      this.timeline = gsap.timeline({
        onComplete: () => { this.isPlaying = false; }
      });

      const tl = this.timeline;

      // Show vending machine
      tl.to(this.container.querySelector('[data-element="machine"]'), {
        opacity: 1,
        scale: 1,
        duration: 0.5,
        ease: 'power2.out'
      });

      // Show wrong outputs falling
      tl.to(this.container.querySelector('[data-wrong="1"]'), {
        opacity: 1,
        y: 0,
        duration: 0.3,
        ease: 'bounce.out'
      }, '+=0.3');

      tl.to(this.container.querySelector('[data-wrong="2"]'), {
        opacity: 1,
        y: 0,
        duration: 0.3,
        ease: 'bounce.out'
      }, '+=0.2');

      tl.to(this.container.querySelector('[data-wrong="3"]'), {
        opacity: 1,
        y: 0,
        duration: 0.3,
        ease: 'bounce.out'
      }, '+=0.2');

      tl.to({}, { duration: 0.8 });

      // Show context panel
      tl.to(this.container.querySelector('[data-element="panel"]'), {
        opacity: 1,
        duration: 0.4
      });

      // Show context buttons
      const buttons = ['domain', 'procedural', 'constraint', 'preference'];
      buttons.forEach((btn, i) => {
        tl.to(this.container.querySelector(`[data-ctx="${btn}"]`), {
          opacity: 1,
          y: 0,
          duration: 0.3,
          ease: 'power2.out'
        }, i === 0 ? '+=0.2' : '-=0.15');
      });

      tl.to({}, { duration: 0.5 });

      // Activate buttons one by one
      buttons.forEach((btn) => {
        const btnEl = this.container.querySelector(`[data-ctx="${btn}"]`);
        tl.call(() => {
          btnEl?.classList.add('active');
          const status = btnEl?.querySelector('.btn-status');
          if (status) status.textContent = '‚óè';
        });
        tl.to({}, { duration: 0.4 });
      });

      // Fade out wrong outputs
      tl.to(this.container.querySelector('.wrong-outputs'), {
        opacity: 0,
        duration: 0.3
      });

      // Show right output
      tl.to(this.container.querySelector('[data-element="right"]'), {
        opacity: 1,
        duration: 0.5,
        ease: 'power2.out'
      });

      tl.to({}, { duration: 0.8 });

      // Show insight
      tl.to(this.container.querySelector('[data-element="insight"]'), {
        opacity: 1,
        y: 0,
        duration: 0.5,
        ease: 'power2.out'
      });
    }

    private resetElements() {
      gsap.set(this.container.querySelector('[data-element="machine"]'), { opacity: 0, scale: 0.95 });
      gsap.set(this.container.querySelectorAll('.output-item.wrong'), { opacity: 0, y: -10 });
      gsap.set(this.container.querySelector('.wrong-outputs'), { opacity: 1 });
      gsap.set(this.container.querySelector('[data-element="right"]'), { opacity: 0 });
      gsap.set(this.container.querySelector('[data-element="panel"]'), { opacity: 0 });
      gsap.set(this.container.querySelectorAll('.context-btn'), { opacity: 0, y: 10 });
      gsap.set(this.container.querySelector('[data-element="insight"]'), { opacity: 0, y: 10 });
      
      // Reset button states
      this.container.querySelectorAll('.context-btn').forEach(btn => {
        btn.classList.remove('active');
        const status = btn.querySelector('.btn-status');
        if (status) status.textContent = '‚óã';
      });
    }

    reset() {
      if (this.timeline) {
        this.timeline.kill();
        this.timeline = null;
      }
      this.isPlaying = false;
      this.resetElements();
    }
  }

  function initAnimation() {
    const container = document.querySelector('[data-context-animation]') as HTMLElement;
    if (container && !(container as any).__animationController) {
      (container as any).__animationController = new ContextAnimationController(container);
    }
  }

  initAnimation();
  document.addEventListener('DOMContentLoaded', initAnimation);
</script>
