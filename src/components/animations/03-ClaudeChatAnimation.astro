---
/**
 * ClaudeChatAnimation.astro
 * 
 * Section 3: "You Already Know This"
 * 
 * Two-part animation showing the SAME conversation in two interfaces:
 * Part 1: Web chat interface (ChatGPT/Claude.ai style)
 * Part 2: Terminal interface (Claude Code style)
 * 
 * Key insight: Same AI, same conversation - the terminal IS a chat interface.
 */

interface Props {
  class?: string;
}

const { class: className = '' } = Astro.props;
---

<div class:list={['claude-chat-animation', className]} data-claude-chat-animation>
  
  <!-- Part 1: Web Chat Interface -->
  <div class="interface-container" data-interface="web">
    <div class="browser-window">
      <div class="browser-chrome">
        <div class="browser-controls">
          <span class="dot red"></span>
          <span class="dot yellow"></span>
          <span class="dot green"></span>
        </div>
        <div class="browser-url">
          <span class="url-icon">üîí</span>
          <span class="url-text">claude.ai</span>
        </div>
      </div>
      
      <div class="chat-interface">
        <div class="chat-messages">
          <!-- User message -->
          <div class="message user" data-element="web-user">
            <div class="message-content">
              <p>List the files in my Downloads folder</p>
            </div>
          </div>
          
          <!-- Assistant message -->
          <div class="message assistant" data-element="web-assistant">
            <div class="message-avatar">
              <span class="avatar-icon">‚ú¶</span>
            </div>
            <div class="message-content">
              <p>I don't have access to your file system. As a web-based assistant, I can't browse folders or see files on your computer.</p>
              <p class="suggestion">You would need to use a tool with file system access, like <strong>Claude Code</strong>, to do that.</p>
            </div>
          </div>
        </div>
        
        <!-- Chat input -->
        <div class="chat-input" data-element="web-input">
          <input type="text" placeholder="Message Claude..." disabled />
          <button class="send-btn" disabled>‚Üë</button>
        </div>
      </div>
    </div>
    
    <div class="interface-label" data-element="web-label">
      <span class="label-text">Web interface</span>
      <span class="label-sub">Chat only - no file access</span>
    </div>
  </div>
  
  <!-- Transition indicator -->
  <div class="transition-indicator" data-element="transition">
    <span class="transition-text">Same question, different interface...</span>
  </div>
  
  <!-- Part 2: Terminal Interface (Claude Code) -->
  <div class="interface-container" data-interface="terminal" style="display: none;">
    <div class="terminal-window">
      <div class="terminal-chrome">
        <div class="window-controls">
          <span class="dot red"></span>
          <span class="dot yellow"></span>
          <span class="dot green"></span>
        </div>
        <span class="terminal-title">claude</span>
      </div>
      
      <div class="terminal-content">
        <!-- User prompt -->
        <div class="terminal-prompt" data-element="term-user">
          <span class="prompt-caret">‚ùØ</span>
          <span class="prompt-text">List the files in my Downloads folder</span>
        </div>
        
        <!-- Claude response -->
        <div class="terminal-response" data-element="term-response">
          <div class="response-text">I'll check your Downloads folder.</div>
          
          <div class="tool-block" data-element="term-tool">
            <div class="tool-header">
              <span class="tool-icon">‚ö°</span>
              <span class="tool-name">Running command</span>
            </div>
            <div class="tool-command">
              <span class="prompt-symbol">$</span>
              <code>ls ~/Downloads</code>
            </div>
          </div>
          
          <div class="tool-output" data-element="term-output">
            <div class="file-list">
              <span class="file">report-q3.pdf</span>
              <span class="file">meeting-notes.docx</span>
              <span class="file">screenshot.png</span>
              <span class="file">invoice-2024.pdf</span>
            </div>
          </div>
          
          <div class="response-summary" data-element="term-summary">
            Found 4 files in your Downloads folder.
          </div>
        </div>
      </div>
    </div>
    
    <div class="interface-label" data-element="term-label">
      <span class="label-text">Terminal interface</span>
      <span class="label-sub">Full system access</span>
    </div>
  </div>
  
  <!-- Final insight -->
  <div class="insight-box" data-element="insight">
    <span class="insight-icon">üí°</span>
    <div class="insight-content">
      <span class="insight-main">Same AI. Same conversation pattern.</span>
      <span class="insight-sub">The terminal just gives it <em>access</em> to your system.</span>
    </div>
  </div>
</div>

<style>
  .claude-chat-animation {
    height: 100%;
    padding: 1rem;
    display: flex;
    flex-direction: column;
    font-family: 'JetBrains Mono', monospace;
    position: relative;
  }

  /* Interface containers */
  .interface-container {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    min-height: 0;
  }

  /* ===== Browser Window (Web Chat) ===== */
  .browser-window {
    flex: 1;
    display: flex;
    flex-direction: column;
    background: #1a1a1a;
    border-radius: 12px;
    overflow: hidden;
    border: 1px solid rgba(255, 255, 255, 0.1);
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.5);
    opacity: 0;
    transform: translateY(10px);
  }

  .browser-chrome {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 0.6rem 1rem;
    background: #2d2d2d;
    border-bottom: 1px solid rgba(255, 255, 255, 0.06);
  }

  .browser-controls {
    display: flex;
    gap: 8px;
  }

  .dot {
    width: 12px;
    height: 12px;
    border-radius: 50%;
  }

  .dot.red { background: #ff5f56; }
  .dot.yellow { background: #ffbd2e; }
  .dot.green { background: #27ca40; }

  .browser-url {
    flex: 1;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    background: rgba(255, 255, 255, 0.08);
    padding: 0.4rem 0.75rem;
    border-radius: 6px;
    max-width: 300px;
  }

  .url-icon {
    font-size: 0.75rem;
  }

  .url-text {
    color: rgba(255, 255, 255, 0.7);
    font-size: 0.8rem;
  }

  /* Chat interface */
  .chat-interface {
    flex: 1;
    display: flex;
    flex-direction: column;
    background: #0f0f0f;
  }

  .chat-messages {
    flex: 1;
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    gap: 1.25rem;
    overflow-y: auto;
  }

  .message {
    display: flex;
    gap: 0.75rem;
    opacity: 0;
  }

  .message.user {
    justify-content: flex-end;
  }

  .message.user .message-content {
    background: #2563eb;
    color: white;
    padding: 0.75rem 1rem;
    border-radius: 18px 18px 4px 18px;
    max-width: 80%;
  }

  .message.assistant {
    align-items: flex-start;
  }

  .message-avatar {
    width: 32px;
    height: 32px;
    background: linear-gradient(135deg, #8b5cf6, #6366f1);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }

  .avatar-icon {
    color: white;
    font-size: 1rem;
  }

  .message.assistant .message-content {
    background: rgba(255, 255, 255, 0.05);
    padding: 1rem;
    border-radius: 4px 18px 18px 18px;
    max-width: 85%;
  }

  .message-content p {
    margin: 0;
    color: rgba(255, 255, 255, 0.9);
    font-size: 0.95rem;
    line-height: 1.5;
    font-family: 'Lora', serif;
  }

  .message-content p + p {
    margin-top: 0.75rem;
  }

  .message-content .suggestion {
    color: rgba(255, 255, 255, 0.6);
    font-size: 0.9rem;
  }

  .message-content strong {
    color: #8b5cf6;
  }

  /* Chat input */
  .chat-input {
    display: flex;
    gap: 0.5rem;
    padding: 1rem;
    border-top: 1px solid rgba(255, 255, 255, 0.06);
    background: rgba(255, 255, 255, 0.02);
    opacity: 0;
  }

  .chat-input input {
    flex: 1;
    background: rgba(255, 255, 255, 0.08);
    border: 1px solid rgba(255, 255, 255, 0.1);
    padding: 0.75rem 1rem;
    border-radius: 24px;
    color: rgba(255, 255, 255, 0.5);
    font-size: 0.9rem;
    font-family: 'Lora', serif;
  }

  .send-btn {
    width: 40px;
    height: 40px;
    background: rgba(255, 255, 255, 0.1);
    border: none;
    border-radius: 50%;
    color: rgba(255, 255, 255, 0.3);
    font-size: 1.1rem;
    cursor: not-allowed;
  }

  /* Interface label */
  .interface-label {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.25rem;
    padding: 0.5rem;
    opacity: 0;
  }

  .label-text {
    color: rgba(255, 255, 255, 0.6);
    font-size: 0.85rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  .label-sub {
    color: rgba(255, 255, 255, 0.35);
    font-size: 0.75rem;
  }

  /* Transition indicator */
  .transition-indicator {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    padding: 1rem 2rem;
    background: rgba(0, 0, 0, 0.9);
    border: 1px solid rgba(139, 92, 246, 0.3);
    border-radius: 12px;
    z-index: 10;
    opacity: 0;
    display: none;
  }

  .transition-text {
    color: rgba(255, 255, 255, 0.9);
    font-size: 1rem;
    font-family: 'Lora', serif;
  }

  /* ===== Terminal Window ===== */
  .terminal-window {
    flex: 1;
    display: flex;
    flex-direction: column;
    background: #0a0a0a;
    border-radius: 12px;
    overflow: hidden;
    border: 1px solid rgba(255, 255, 255, 0.1);
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.5);
    opacity: 0;
    transform: translateY(10px);
  }

  .terminal-chrome {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.6rem 1rem;
    background: #1a1a1a;
    border-bottom: 1px solid rgba(255, 255, 255, 0.06);
  }

  .window-controls {
    display: flex;
    gap: 8px;
  }

  .terminal-title {
    color: rgba(255, 255, 255, 0.5);
    font-size: 0.85rem;
  }

  .terminal-content {
    flex: 1;
    padding: 1.5rem 2rem;
    display: flex;
    flex-direction: column;
    gap: 1.25rem;
    overflow-y: auto;
  }

  /* Terminal prompt */
  .terminal-prompt {
    display: flex;
    align-items: flex-start;
    gap: 0.75rem;
    opacity: 0;
  }

  .prompt-caret {
    color: #8b5cf6;
    font-size: 1.25rem;
    font-weight: bold;
  }

  .prompt-text {
    color: rgba(255, 255, 255, 0.95);
    font-size: 1.1rem;
  }

  /* Terminal response */
  .terminal-response {
    padding-left: 1rem;
    border-left: 3px solid rgba(139, 92, 246, 0.4);
    display: flex;
    flex-direction: column;
    gap: 1rem;
    opacity: 0;
  }

  .response-text,
  .response-summary {
    color: rgba(255, 255, 255, 0.85);
    font-size: 1rem;
    font-family: 'Lora', serif;
  }

  /* Tool block */
  .tool-block {
    background: rgba(0, 0, 0, 0.4);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 8px;
    overflow: hidden;
    opacity: 0;
  }

  .tool-header {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 0.75rem;
    background: rgba(255, 255, 255, 0.03);
    border-bottom: 1px solid rgba(255, 255, 255, 0.06);
  }

  .tool-icon {
    font-size: 0.9rem;
  }

  .tool-name {
    color: rgba(255, 255, 255, 0.5);
    font-size: 0.8rem;
  }

  .tool-command {
    padding: 0.75rem 1rem;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .prompt-symbol {
    color: #00ff00;
    font-weight: 700;
  }

  .tool-command code {
    color: #10b981;
    font-size: 1rem;
  }

  /* Tool output */
  .tool-output {
    padding: 0.75rem 1rem;
    background: rgba(0, 0, 0, 0.3);
    border-top: 1px solid rgba(255, 255, 255, 0.06);
    opacity: 0;
  }

  .file-list {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem 2rem;
  }

  .file {
    color: #60a5fa;
    font-size: 0.95rem;
  }

  .response-summary {
    opacity: 0;
  }

  /* Insight box */
  .insight-box {
    padding: 1rem 1.25rem;
    background: rgba(139, 92, 246, 0.08);
    border: 1px solid rgba(139, 92, 246, 0.25);
    border-radius: 12px;
    display: flex;
    align-items: center;
    gap: 1rem;
    opacity: 0;
    margin-top: auto;
  }

  .insight-icon {
    font-size: 1.5rem;
  }

  .insight-content {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .insight-main {
    color: rgba(255, 255, 255, 0.95);
    font-size: 1.05rem;
    font-weight: 500;
  }

  .insight-sub {
    color: rgba(255, 255, 255, 0.7);
    font-size: 0.9rem;
    font-family: 'Lora', serif;
  }

  .insight-sub em {
    color: #8b5cf6;
    font-style: normal;
    font-weight: 600;
  }

  /* Responsive */
  @media (max-width: 1200px) {
    .terminal-content,
    .chat-messages {
      padding: 1rem;
    }

    .prompt-text,
    .message-content p {
      font-size: 0.95rem;
    }
  }
</style>

<script>
  import gsap from 'gsap';

  class ClaudeChatAnimationController {
    private container: HTMLElement;
    private timeline: gsap.core.Timeline | null = null;
    private isPlaying = false;

    constructor(container: HTMLElement) {
      this.container = container;
      this.init();
    }

    private init() {
      document.addEventListener('section:change', (e: Event) => {
        const detail = (e as CustomEvent).detail;
        if (detail.sectionData?.id === 'terminal-chat') {
          this.play();
        } else {
          this.reset();
        }
      });

      const hash = window.location.hash.slice(1);
      if (hash === 'terminal-chat') {
        setTimeout(() => this.play(), 500);
      }
    }

    private showInterface(which: 'web' | 'terminal') {
      const webInterface = this.container.querySelector('[data-interface="web"]') as HTMLElement;
      const termInterface = this.container.querySelector('[data-interface="terminal"]') as HTMLElement;
      
      if (which === 'web') {
        webInterface.style.display = 'flex';
        termInterface.style.display = 'none';
      } else {
        webInterface.style.display = 'none';
        termInterface.style.display = 'flex';
      }
    }

    play() {
      if (this.isPlaying) return;

      if (this.timeline) {
        this.timeline.kill();
        this.timeline = null;
      }

      this.resetElements();
      this.isPlaying = true;
      this.showInterface('web');

      this.timeline = gsap.timeline({
        onComplete: () => { this.isPlaying = false; }
      });

      const tl = this.timeline;

      // ===== PART 1: Web Interface =====
      
      // Show browser window
      tl.to(this.container.querySelector('.browser-window'), {
        opacity: 1,
        y: 0,
        duration: 0.8,
        ease: 'power2.out'
      });

      // User message
      tl.to(this.container.querySelector('[data-element="web-user"]'), {
        opacity: 1,
        duration: 0.5
      });

      tl.to({}, { duration: 1.5 }); // Read the question

      // Assistant response
      tl.to(this.container.querySelector('[data-element="web-assistant"]'), {
        opacity: 1,
        duration: 0.6
      });

      tl.to({}, { duration: 3.0 }); // Read the response - it can't help

      // Chat input
      tl.to(this.container.querySelector('[data-element="web-input"]'), {
        opacity: 1,
        duration: 0.3
      });

      // Web label
      tl.to(this.container.querySelector('[data-element="web-label"]'), {
        opacity: 1,
        duration: 0.4
      });

      tl.to({}, { duration: 2.0 }); // Let it sink in

      // ===== TRANSITION =====
      
      // Show transition text
      const transitionEl = this.container.querySelector('[data-element="transition"]') as HTMLElement;
      tl.call(() => {
        transitionEl.style.display = 'block';
      });
      tl.to(transitionEl, {
        opacity: 1,
        duration: 0.4
      });

      tl.to({}, { duration: 1.5 });

      // Fade out transition and switch
      tl.to(transitionEl, {
        opacity: 0,
        duration: 0.3
      });
      tl.call(() => {
        transitionEl.style.display = 'none';
        this.showInterface('terminal');
      });

      // ===== PART 2: Terminal Interface =====
      
      // Show terminal window
      tl.to(this.container.querySelector('.terminal-window'), {
        opacity: 1,
        y: 0,
        duration: 0.8,
        ease: 'power2.out'
      });

      // User prompt (same question!)
      tl.to(this.container.querySelector('[data-element="term-user"]'), {
        opacity: 1,
        duration: 0.5
      });

      tl.to({}, { duration: 1.5 });

      // Response
      tl.to(this.container.querySelector('[data-element="term-response"]'), {
        opacity: 1,
        duration: 0.5
      });

      tl.to({}, { duration: 1.0 });

      // Tool block
      tl.to(this.container.querySelector('[data-element="term-tool"]'), {
        opacity: 1,
        duration: 0.4
      });

      tl.to({}, { duration: 1.5 });

      // Output
      tl.to(this.container.querySelector('[data-element="term-output"]'), {
        opacity: 1,
        duration: 0.4
      });

      tl.to({}, { duration: 1.5 });

      // Summary
      tl.to(this.container.querySelector('[data-element="term-summary"]'), {
        opacity: 1,
        duration: 0.4
      });

      // Terminal label
      tl.to(this.container.querySelector('[data-element="term-label"]'), {
        opacity: 1,
        duration: 0.4
      });

      tl.to({}, { duration: 2.0 });

      // ===== INSIGHT =====
      tl.to(this.container.querySelector('[data-element="insight"]'), {
        opacity: 1,
        duration: 0.6
      });
    }

    private resetElements() {
      // Web interface
      gsap.set(this.container.querySelector('.browser-window'), { opacity: 0, y: 10 });
      gsap.set(this.container.querySelector('[data-element="web-user"]'), { opacity: 0 });
      gsap.set(this.container.querySelector('[data-element="web-assistant"]'), { opacity: 0 });
      gsap.set(this.container.querySelector('[data-element="web-input"]'), { opacity: 0 });
      gsap.set(this.container.querySelector('[data-element="web-label"]'), { opacity: 0 });
      
      // Transition
      const transitionEl = this.container.querySelector('[data-element="transition"]') as HTMLElement;
      if (transitionEl) {
        transitionEl.style.display = 'none';
        gsap.set(transitionEl, { opacity: 0 });
      }
      
      // Terminal interface
      gsap.set(this.container.querySelector('.terminal-window'), { opacity: 0, y: 10 });
      gsap.set(this.container.querySelector('[data-element="term-user"]'), { opacity: 0 });
      gsap.set(this.container.querySelector('[data-element="term-response"]'), { opacity: 0 });
      gsap.set(this.container.querySelector('[data-element="term-tool"]'), { opacity: 0 });
      gsap.set(this.container.querySelector('[data-element="term-output"]'), { opacity: 0 });
      gsap.set(this.container.querySelector('[data-element="term-summary"]'), { opacity: 0 });
      gsap.set(this.container.querySelector('[data-element="term-label"]'), { opacity: 0 });
      
      // Insight
      gsap.set(this.container.querySelector('[data-element="insight"]'), { opacity: 0 });
      
      // Reset to web view
      this.showInterface('web');
    }

    reset() {
      if (this.timeline) {
        this.timeline.kill();
        this.timeline = null;
      }
      this.isPlaying = false;
      this.resetElements();
    }
  }

  function initAnimation() {
    const container = document.querySelector('[data-claude-chat-animation]') as HTMLElement;
    if (container && !(container as any).__animationController) {
      (container as any).__animationController = new ClaudeChatAnimationController(container);
    }
  }

  initAnimation();
  document.addEventListener('DOMContentLoaded', initAnimation);
</script>
